<p style="text-align:justify">
  <p>Últimas evaluaciones relizadas</p>
</p>

<% if @results.empty? %>
  <em>No se ha realizado ninguna evaluación</em>
<% else %>
  <ul data-role="listview" data-inset="true" data-filter="true" >
    <% @results.each do |teacher| %>
      <li>
        <%= link_to teacher.names + " " + teacher.last_name + " " + teacher.second_last_name, details_path(teacher.id) %>
        <span class="ui-li-count">
        <%= teacher.count_evaluations %>
        </span>
      </li>
    <% end %>
  </ul>
<% end %>